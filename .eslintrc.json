{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": [
    "standard-with-typescript",
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:promise/recommended",
    "plugin:security/recommended",
    "prettier"
  ],
  "parserOptions": {
    "project": "tsconfig.json"
  },
  "rules": {
    "max-len": ["error", {
      "code": 128
    }],
    "@typescript-eslint/strict-boolean-expressions": "warn"
  }
}
